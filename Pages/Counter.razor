@page "/counter"

<BlazorStyled.Styled @bind-Classname="blah">
    color: red;
</BlazorStyled.Styled>

<h1 class="@blah">Counter</h1>

<p>Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

@code {
    string blah;
    int currentCount = 0;

    void IncrementCount()
    {
        currentCount++;
    }
}
